<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/view_card_text_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:fontFamily="@font/scdream3"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:fontFamily="@font/scdream3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="과목명"/>

            <TextView
                android:fontFamily="@font/scdream3"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:text="등급"/>

            <TextView
                android:fontFamily="@font/scdream3"
                android:gravity="center"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:text="단위"/>

            <TextView
                android:fontFamily="@font/scdream3"
                android:text="과목 계열"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:tint="#606060"
                android:visibility="invisible"
                android:src="@drawable/baseline_delete_black_24"
                android:background="@null"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grade1_recycler_grade"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/grade1_button_addgrade"
            android:layout_gravity="right"
            android:padding="3dp"
            android:text="과목 추가"
            android:textColor="#F18B8D"
            android:drawableTint="#F18B8D"
            android:drawableRight="@drawable/baseline_add_black_24"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:fontFamily="@font/scdream3"
            android:gravity="center_vertical"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="add"
            android:elevation="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>