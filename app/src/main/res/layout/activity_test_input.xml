<!--                            android:id="@+id/test_spinner_month"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content" />-->

<!--                    </LinearLayout>-->

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_test_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.LineChart
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/test_chart_line"/>

                </LinearLayout>

                <Button
                    android:id="@+id/test_button_input"
                    android:layout_gravity="right"
                    android:text="성적 추가하기"
                    android:padding="3dp"
                    android:textColor="#F18B8D"
                    android:drawableTint="#F18B8D"
                    android:drawableRight="@drawable/baseline_trending_flat_black_24"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:fontFamily="@font/scdream3"
                    android:gravity="center_vertical"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="add"
                    android:elevation="0dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

