<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_rate"
    android:paddingTop="15dp" android:paddingBottom="30dp"
    android:paddingLeft="10dp" android:paddingRight="10dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_foreground"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_g"
        android:textColor="#FFFFFFFF"
        android:fontFamily="@font/scdream4"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="내신계산기를 유용하게 사용하고 계신가요? 여러분들의 의견은 큰 힘이됩니다."
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평가하기"
        android:id="@+id/rate_button_rate"
        android:textColor="#FFFFFFFF"
        android:fontFamily="@font/scdream4"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_button_rate"/>

</LinearLayout>