<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/scdream2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/scdream3</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/scdream3</item>
    </style>

    <style name="item_textcolor_v19" parent="AppTheme">
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="edittext_color" parent="AppTheme">
        <item name="colorAccent">#FFFFFFFF</item>
        <item name="colorControlNormal">#FFFFFFFF</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:background">#040404</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

</resources>
